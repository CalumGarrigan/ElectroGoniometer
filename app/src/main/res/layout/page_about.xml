<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainPage">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="15dp"
          app:cardCornerRadius="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif-monospace"
            android:padding="10dp"
            android:text="Electrogoniometer"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
      </androidx.cardview.widget.CardView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:fontFamily="serif-monospace"
          android:padding="5dp"
          android:text="This mobile application can be used to measure various angles determining the patient’s range of motion (ROM) in any joint."
          android:textColor="@color/white"
          android:textSize="20dp" />

      <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
          android:layout_width="match_parent"
          android:layout_height="343dp"
          android:layout_marginTop="5dp"
          app:src="@drawable/app_design2" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="serif-monospace"
          android:padding="2dp"
          android:text="(pinch to zoom in)"
          android:textColor="@color/white"
          android:textSize="12dp" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="serif-monospace"
          android:padding="5dp"
          android:text="This is the application design layout of each page."
          android:textColor="@color/white"
          android:textSize="20dp" />
      <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
          android:layout_width="match_parent"
          android:layout_height="343dp"
          android:layout_marginTop="5dp"
          app:src="@drawable/electrogoniomer_1" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="serif-monospace"
          android:padding="2dp"
          android:text="(pinch to zoom in)"
          android:textColor="@color/white"
          android:textSize="12dp" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="serif-monospace"
          android:padding="5dp"
          android:text="In this image, the electrogoniometer mobile application is initially placed on top of the thigh in line with the femur using the red line as a marker, the same step is used for the tibia, lining the device in line with the tibia using the red marker. Resulting in measuring the patient’s popliteal angle (PA) by taking the device’s angular position at the thigh and taking the second angular position at the tibia and taking the difference between the two angle positions."
          android:textColor="@color/white"
          android:textSize="20dp" />


      <View
          android:layout_width="wrap_content"
          android:layout_height="4dp"
          android:background="@color/white" />

      <TextView
          android:id="@+id/reference_title"
          android:layout_width="161dp"
          android:layout_height="30dp"
          android:layout_gravity="center"
          android:text="Third Party References:" />

      <TextView
          android:id="@+id/text1"
          android:layout_width="wrap_content"
          android:layout_height="22dp"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_gravity="center"
          android:fontFamily="serif-monospace"
          android:padding="2dp"
          android:text="@string/linktosite" />



      <TextView
          android:id="@+id/text2"
          android:layout_width="wrap_content"
          android:layout_height="22dp"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_gravity="center"
          android:fontFamily="serif-monospace"
          android:padding="2dp"
          android:text="@string/linktosite2" />


      <TextView
          android:id="@+id/text3"
          android:layout_width="277dp"
          android:layout_height="39dp"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_gravity="center"
          android:fontFamily="serif-monospace"
          android:padding="2dp"
          android:text="@string/linktosite3" />

      <TextView
          android:id="@+id/text4"
          android:layout_width="393dp"
          android:layout_height="53dp"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_gravity="center"
          android:fontFamily="serif-monospace"
          android:padding="2dp"
          android:text="@string/linktosite4" />
    </LinearLayout>
  </ScrollView>
</LinearLayout>