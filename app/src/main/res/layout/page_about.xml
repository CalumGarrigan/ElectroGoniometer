<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainPage">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="15dp"
          app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif-monospace"
            android:padding="10dp"
            android:text="Electrogoniometer"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

      </androidx.cardview.widget.CardView>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:fontFamily="serif-monospace"
          android:padding="5dp"
          android:text="This app is designed to measure joint angles of the body."
          android:textColor="@color/white"
          android:textSize="20dp" />


      <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
          android:layout_width="match_parent"
          android:layout_height="343dp"
          android:layout_marginTop="5dp"
          app:src="@drawable/app_design" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="serif-monospace"
          android:padding="2dp"
          android:text="(pinch to zoom in)"
          android:textColor="@color/white"
          android:textSize="12dp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="serif-monospace"
          android:padding="5dp"
          android:text="This is the application design layout of each page."
          android:textColor="@color/white"
          android:textSize="20dp" />

      <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
          android:layout_width="match_parent"
          android:layout_height="343dp"
          android:layout_marginTop="5dp"
          app:src="@drawable/electrogoniometer" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="serif-monospace"
          android:padding="2dp"
          android:text="(pinch to zoom in)"
          android:textColor="@color/white"
          android:textSize="12dp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="serif-monospace"
          android:padding="5dp"
          android:text="This mobile application can be used to measure various angles determining the patient’s range of motion (ROM) in any joint. In this image the electrogoniometer mobile application is placed on top of thigh in line with the femur as well as placed on the tibia. Overall measuring the patient’s popliteal angle (PA), which is the angle between the thigh and the leg.
"
          android:textColor="@color/white"
          android:textSize="20dp" />


      <View
          android:layout_width="wrap_content"
          android:layout_height="4dp"
          android:background="@color/white" />


      <TextView
          android:layout_width="421dp"
          android:layout_height="32dp"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:fontFamily="serif-monospace"
          android:padding="2dp"
          android:id="@+id/text1"
          android:text="@string/linktosite" />

      <TextView
          android:layout_width="388dp"
          android:layout_height="48dp"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:fontFamily="serif-monospace"
          android:padding="2dp"
          android:id="@+id/text2"
          android:text="@string/linktosite2" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:fontFamily="serif-monospace"
          android:padding="2dp"
          android:id="@+id/text3"
          android:text="@string/linktosite3" />


    </LinearLayout>

  </ScrollView>

</LinearLayout>