<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.garrigan.calum.ljmu.electrogoniometer" >

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/foot_image_vector_round"
        android:roundIcon="@mipmap/foot_image_vector_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ElectroGoniometer" >
        <activity android:name=".MainPage" />
        <activity android:name=".NewPatientPage" android:parentActivityName=".MainPage"
            android:label="@string/New_Patient"/>
        <activity android:name=".PatientListPage" android:parentActivityName=".MainPage"
            android:label="@string/Patient_List"/>
        <activity android:name=".AboutPage" android:parentActivityName=".MainPage"
            android:label="@string/About_App"/>
        <activity android:name=".SplashActivity" android:theme="@style/Theme.ElectroGoniometer1" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".GoniometerPage" android:parentActivityName=".NewPatientPage"
            android:label="@string/Goniometer"
            android:screenOrientation="landscape"/>
    </application>

</manifest>